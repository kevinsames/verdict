# Verdict - Azure Databricks PAT Authentication
# Copy this file to .env and fill in your values
# This file is gitignored - NEVER commit actual credentials

# Your Azure Databricks workspace URL
# Format: https://adb-<workspace-id>.<random>.azuredatabricks.net
DATABRICKS_HOST=https://adb-<workspace-id>.<random>.azuredatabricks.net

# Your Personal Access Token
# Generate from: Databricks Workspace -> User Settings -> Developer -> Generate new token
DATABRICKS_TOKEN=dapi...

# Optional: Databricks user for development paths
DATABRICKS_USER=your-email@example.com

# --- RAG Test Dataset Generator (verdict-testgen) ---
# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=my_collection
QDRANT_TEXT_FIELD=text
QDRANT_SCROLL_LIMIT=200

# Azure OpenAI (for test data synthesis)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-01

# Generation settings
SAMPLES_PER_CHUNK=1
HARD_NEGATIVES_PER_QUERY=2
DELAY_BETWEEN_CALLS=0.5
OUTPUT_DIR=./output